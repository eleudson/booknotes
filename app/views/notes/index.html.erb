<h1>Listing notes</h1>

<table>
  <tr>
    <th>Publication</th>
    <th>Note name</th>
    <th>Init page</th>
    <th>Last page</th>
  </tr>

<% for note in @notes %>
  <tr>
    <td><%=h note.publication.title %></td>
    <td><%=h note.name %></td>
    <td><%=h note.init_page %></td>
    <td><%=h note.last_page %></td>
    <td><%= link_to 'Show', [@publication, note] %></td>
    <td><%= link_to 'Edit', [:edit, @publication, note] %></td>
    <td><%= link_to 'Destroy', [@publication, note], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New note', new_publication_note_path(@publication) %> | 
<%= link_to 'Back', publications_path %>
