<p>
  <%= h 'Publication: ' + @publication.title %>
</p>

<% form_for([@publication, @review], :url => publication_review_path(@publication)) do |f| %>
  <p>
    <b>Body</b><br />
    <%= f.text_area :body, :cols => 100, :rows => 20 %>
  </p>
  <p>
    <%= f.submit button_name %>
  </p>
<% end %>
 
