<h1>Listing editors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>City</th>
  </tr>

<% for editor in @editors %>
  <tr class="<%= cycle('tr0','tr1') %>">
    <td><%=h editor.name %></td>
    <td><%=h editor.city %></td>
    <td><%= link_to 'Edit', edit_editor_path(editor) %></td>
    <td><%= link_to 'Destroy', editor, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @publications %>

